units metal
dimension 3
boundary p p p
atom_style atomic
read_data structure.inp
include potential.inp
fix ensemble all nvt temp 30.0 30.0 0.1
variable dumptime  equal 1 
dump 1 all custom ${dumptime} dump.out id type xsu ysu zsu fx fy fz
dump_modify 1 sort id format line "%d %d %20.15g %20.15g %20.15g %20.15g %20.15g %20.15g"
thermo_style custom step temp pe etotal pxx pxy pxz pyy pyz pzz vol
thermo_modify format float %20.15g
thermo 1
timestep 0.001
velocity all create 60.0 30064 dist gaussian
run 50
